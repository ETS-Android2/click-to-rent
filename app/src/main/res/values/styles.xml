<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ThemeClick2rent">
        <item name="backgroundColor">@color/theme_color</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="fab_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/google</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="style_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:radius">4sp</item>
        <item name="android:shadowColor">@color/cardview_shadow_start_color</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="style_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">4dp</item>
        <!--        <item name="android:layout_weight">2</item>-->
    </style>

    <style name="style_profil">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableEnd">@drawable/outline_chevron_right_black_24</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_slab_bold</item>

    </style>

    <style name="StyleTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
</resources>